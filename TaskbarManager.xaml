<Window x:Class="WpfAppTaskbarManager.TaskbarManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTaskbarManager"
        mc:Ignorable="d"
        Title="Task Manager" Height="450" Width="800">
    
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Frame Grid.Row="0" Name="MenuControl" NavigationUIVisibility="Hidden"/>
        </Grid>
        <Grid Grid.Row="1">
            <Frame Grid.Row="0" Name="TabControl" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
